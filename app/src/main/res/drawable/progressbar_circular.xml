<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:duration="-1"
    android:toDegrees="1080" >

    <shape
        android:innerRadiusRatio="20"
        android:shape="ring"
        android:thicknessRatio="60"
        android:useLevel="false" >

        <size
            android:height="12dp"
            android:width="12dp" />

        <gradient
            android:centerColor="@color/bondi_blue"
            android:centerY="0.50"
            android:endColor="@color/color_alizarin"
            android:startColor="@color/design_default_color_secondary"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>